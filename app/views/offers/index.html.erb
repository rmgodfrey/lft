<h1>Welcome to LFT</h1>

<h2>Tutoring Offers</h2>

<div class="card-container">
  <% @offers.each do |offer| %>
    <div class="card-product position-relative">
       <img src="https://source.unsplash.com/random/?<%= offer.topic %>" />
      <div class="card-product-infos">
        <%= offer.topic %>
        <div class="description-height">
          <%= offer.description %>
        </div>
        <div class="d-flex justify-content-between button-positions" >
          <%= link_to "Book Now",offer_path(offer), class:"btn btn-outline-secondary" %>
          <%= link_to "Lesson Info",offer_path(offer), class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
